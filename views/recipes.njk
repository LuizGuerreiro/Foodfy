{% extends "layout.njk" %}

{% block title %}
<title>Receitas</title>
{% endblock title %}

{% block menu %}
<a href="/about">Sobre</a>
<a href="/recipes" class="active">Receitas</a>
{% endblock menu %}

{% block body %}
<section>
    <div class="cards">
        {% for recipe in recipes %}
        <div class="card" id="{{loop.index0}}">
            <div class="recipeImage">
                <img src="{{recipe.image}}" alt="{{recipe.title}}">
            </div>
            <div class="recipeName">
                <p>{{recipe.title}}</p>
            </div>
            <div class="recipeAuthor">
                <p>{{recipe.author}}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<script src="/script.js"></script>
{% endblock body %}