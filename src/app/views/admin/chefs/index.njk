{% extends "admin/layoutAdm.njk" %}

{% block title %}
<title>Foodfy Administrador</title>
{% endblock title %}

{% block admTitle %}
<div class="title">
   <h1>Gerenciar chefs</h1>
   <a href="/admin/chefs/create">Criar chef</a>
</div>
{% endblock admTitle %}

{% block main %}
   <div class="chefCards">
      {% for chef in chefs %}
      <div class="chefCard">
            <div class="chefImage">
               <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
            </div>
            <div class="cardInfo">
               <div class="chefName">
                  <p>{{chef.name}}</p>
               </div>
               <div class="cardLinK">
                  <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
               </div>
            </div>
      </div>
      {% endfor %}
   </div>
{% endblock main %}